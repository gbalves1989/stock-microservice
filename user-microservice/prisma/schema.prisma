generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id              String  @id @default(auto()) @map("_id") @db.ObjectId
    name            String
    email           String  @unique
    password        String
    kong_jwt_key    String?
    kong_jwt_secret String?

    @@map("users")
}
